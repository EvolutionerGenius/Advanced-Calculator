#Inputs

loop=True
while loop:
	number=input("Welcome to calculator,what number you want first:")
	number1=input("What is second number:")
	operator=input("What operator do you want:")

#statements

if operator == "+":
	print(number "and" number1 "is equal to" number+number1)
elif operator == "-":
	print(number "and" number1 "is equal to" number-number1)
elif operator == "/":
	print(number "and" number1 "is equal to" number/number1)
elif operator == "*":
	print(number "and" number1 "is equal to" number*number1)
else:
	print("Sorry that operator or number is not defined")

again=input("Congratuation!Do you wanna calculate again:")
if again== "no" or "No":
	loop=False
	print("Goodbye!")
elif again== "yes" or "Yes":
	print("Good!")
